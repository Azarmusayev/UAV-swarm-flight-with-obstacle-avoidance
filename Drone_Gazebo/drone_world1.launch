<?xml version="1.0" encoding="UTF-8"?>
<launch>

  <arg name="world" default="empty"/> 
  <arg name="paused" default="false"/>
  <arg name="use_sim_time" default="true"/>
  <arg name="gui" default="true"/>
  <arg name="headless" default="false"/>
  <arg name="debug" default="false"/>
  <param name="use_sim_time" value="true"/>

  <include file="$(find gazebo_ros)/launch/empty_world.launch">
    <arg name="world_name" value="$(find drone_gazebo)/worlds/testing_world1.world"/>
    <arg name="paused" value="$(arg paused)"/>
    <arg name="use_sim_time" value="$(arg use_sim_time)"/>
    <arg name="gui" value="$(arg gui)"/>
    <arg name="headless" value="$(arg headless)"/>
    <arg name="debug" value="$(arg debug)"/>
  </include>

  <group ns="ardrone1">
  <!-- push robot_description to factory and spawn robot in gazebo -->
  <include file="$(find hector_quadrotor_gazebo)/launch/spawn_quadrotor.launch">
    <arg name="model" value="$(find hector_quadrotor_description)/urdf/quadrotor_hokuyo_utm30lx.gazebo.xacro"/>
   <arg name="name" value="quadrotor1"/>

      <arg name="x" default="-0.448"/>
      <arg name="y" default="-8.927"/>
      <arg name="z" default="0.3"/>
  </include>
   <node pkg="robot_state_publisher" type="robot_state_publisher" name="robot_state_publisher" output="screen" >
    <param name="publish_frequency" type="double" value="50.0" />
    <param name="tf_prefix" value="ardrone1" />
  </node>
  </group>

  <group ns="ardrone2">
  <include file="$(find hector_quadrotor_gazebo)/launch/spawn_quadrotor.launch">
    <arg name="model" value="$(find hector_quadrotor_description)/urdf/quadrotor_hokuyo_utm30lx.gazebo.xacro"/>
<arg name="name" value="quadrotor2"/>
      <arg name="x" default="3.47"/>
      <arg name="y" default="-8.884"/>
      <arg name="z" default="0.3"/>
  </include>
   <node pkg="robot_state_publisher" type="robot_state_publisher" name="robot_state_publisher" output="screen" >
    <param name="publish_frequency" type="double" value="50.0" />
    <param name="tf_prefix" value="ardrone2" />
  </node>
  </group>

  <group ns="ardrone3">
  <!-- push robot_description to factory and spawn robot in gazebo -->
  <include file="$(find hector_quadrotor_gazebo)/launch/spawn_quadrotor.launch">
    <arg name="model" value="$(find hector_quadrotor_description)/urdf/quadrotor_hokuyo_utm30lx.gazebo.xacro"/>
<arg name="name" value="quadrotor3"/>

      <arg name="x" default="-0.391"/>
      <arg name="y" default="-10.504"/>
      <arg name="z" default="0.3"/>
  </include>
   <node pkg="robot_state_publisher" type="robot_state_publisher" name="robot_state_publisher" output="screen" >
    <param name="publish_frequency" type="double" value="50.0" />
    <param name="tf_prefix" value="ardrone3" />
  </node>
  </group>

  <group ns="ardrone4">
  <include file="$(find hector_quadrotor_gazebo)/launch/spawn_quadrotor.launch">
    <arg name="model" value="$(find hector_quadrotor_description)/urdf/quadrotor_hokuyo_utm30lx.gazebo.xacro"/>
<arg name="name" value="quadrotor4"/>
      <arg name="x" default="3.481"/>
      <arg name="y" default="-10.449"/>
      <arg name="z" default="0.3"/>
  </include>
   <node pkg="robot_state_publisher" type="robot_state_publisher" name="robot_state_publisher" output="screen" >
    <param name="publish_frequency" type="double" value="50.0" />
    <param name="tf_prefix" value="ardrone4" />
  </node>
  </group>




  <!-- Visualization -->
  <!--node pkg="rviz" type="rviz" name="rviz" args="-d $(find amcl3d)/rviz/amcl3d.rviz"/-->
</launch>
